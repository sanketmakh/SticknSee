<% include ./partials/header.ejs %>
<div class="w-full h-screen  flex items-center justify-center">
  <div class="w-90 h-96 bg-zinc-100 px-7 py-10 rounded-md">
    <h1 class="text-3xl text-centre text-zinc-700 font-semibold tracking-tight leading-none capitalize" >Create new Account</h1>
    <form action="/register" method="post">
      <input class="border-3 rounded-md block mt-2 w-full px-3 py-2"  type="text" name="username" placeholder="Enter your name">
      <input class="border-3 rounded-md block mt-2 w-full px-3 py-2"  type="text" name="email" placeholder="Enter your email">
      <input class="border-3 rounded-md block mt-2 w-full px-3 py-2"  type="password" name="password" placeholder="password">
      <input class="border-3 rounded-md block mt-2 w-full px-3 py-2"  type="number" name="contact" placeholder="contact">
      <!-- <a class ="mt-2 inline-block font-semibold text-zinc-500" href=""> forgot password</a> -->
      <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-500 text-white rounded-full"  type="submit" value="Create new account">
      <a href="/" class="inline-block text-sm font-semibold text-zinc-700 text-center w-full"> ALready have a account!!</a>
      
    </form>
  </div>
  
</div>
